body
  background: #2c2b2c
  color: #fff
  font: 11px/14px "Andale Mono", "Lucida Console", Consolas, monospace
  margin: 5px
  padding: 0 0 32px
  overflow-x: hidden

input
  border: 0
  &:focus
    outline: none

#input
  position: fixed
  bottom: 0
  left: 0
  width: 100%
  padding: 10px 5px
  margin: 1px 0 0
  background: #222
  color: #eee
  border-top: 1px solid #3e3e3e
  box-shadow: 0 -1px 0 #222
  &:focus
    box-shadow: 0 -1px 0 #222, inset 0 5px 15px -5px #111

ul
  list-style: none
  margin: 0
  padding: 0

.message-timestamp,
.message-from 
  margin-right: 0.5em

.message-hide
  .message-join,
  .message-part
    display: none

.message-timestamp
  color: #555

.message-join,
.message-part
  .message-from
    color: #999

.message-join
  .message-from
    &:after
      content: ' joined'

.message-part
  .message-from
    &:after
      content: ' quit'

.message
  .message-from
    color: #bec4a4
    &:before
      content: '('
    &:after
      content: ')'

@media screen and (max-width: 480px)
  .message-timestamp
    font-size: 0.8em